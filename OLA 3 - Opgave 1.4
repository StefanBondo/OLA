  mutate(qtr = as.yearqtr(kvartal, "%YQ%q")) %>%
  filter(qtr <= as.yearqtr("2025Q2", "%YQ%q")) %>%
  transmute(real_vaekst_pct,
            gennemsnit) %>%
  filter(is.finite(real_vaekst_pct), is.finite(gennemsnit))

mod <- lm(real_vaekst_pct ~ gennemsnit, data = forudsig)


ny <- data.frame(gennemsnit = 10.122222)
